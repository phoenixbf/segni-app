    "sem": {
        "UN_SanPietro_0": {
            "title": "L'area",
            "descr": "Nella fase romana quest'area ospitava l'<b>Acropoli</b>, il punto pi\u00f9 alto, un luogo sacro dove era stato eretto il tempio dedicato alla <b>dea Giunone Moneta</b> che era protettrice della citt\u00e0. A partire dall'epoca tardoantica si assiste alla trasformazione architettonica e funzionale del sito. <b>Il tempio diventa una chiesa</b> e il suo intorno acquista i gradualmente connotati di una vera e propria <b>area fortificata</b>",
            "cover": "Acropoli0.jpg",
            "audio": "un_it testo 12.m4a"
        },
        "UN_SanPietro_1": {
            "title": "La chiesa di San Pietro",
            "descr": "La struttura che hai dinanzi guardando la chiesa di S.Pietro, con la grande facciata e la larga scalinata, \u00e8 il risultato finale di una <b>lunga serie di interventi</b>.\n<br>Una generale <b>riorganizzazione architettonica</b> si \u00e8 individuata nel <b>tardo II secolo a.C. </b>.",
            "cover": "Acropoli1.jpg",
            "audio": "un_it testo13.m4a"
        },
        "UN_SanPietro_2": {
            "title": "Un tempio pagano",
            "descr": "La <b>trasformazione</b> da tempio pagano a chiesa dedicata a San Pietro avvenne gradualmente, probabilmente a partire gi\u00e0 dal <b>VI \u2013 VII secolo</b>. ",
            "cover": "Acropoli2.jpg",
            "audio": "un_it testo 14.m4a"
        },
        "UN_SanPietro_3": {
            "title": "La Basilica",
            "descr": "La chiesa ha subito numerose modifiche e restauri, l'ultimo dei quali ha riportato alla luce <b>tre affreschi di epoca differente</b>. \n ",
            "cover": "Acropoli3.jpg",
            "audio": "un_it testo 15.m4a"
        },
        "UN_Tempio_1": {
            "title": "Il tempio di Giunone Moneta",
            "descr": "Caro viaggiatore ora non riesci a vederlo, ma un tempo qui sorgeva il <b>tempio di Giunone Moneta</b> su un alto podio . Al di sopra del podio, un ampio pronao colonnato e, nella parte posteriore, tre celle affiancate, secondo l\u2019antico <b>schema del tempio di tipo etrusco-italico</b>.",
            "cover": "Acropoli4.jpg",
            "audio": "un_it testo 16.m4a"
        },
        "UN_SanPietro_4": {
            "title": "Il <em>castrum</em> medievale",
            "descr": "Nel <b>Medioevo</b> l\u2019area dell\u2019acropoli acquisisce un ruolo prettamente strategico, in virt\u00f9 del fatto che era il luogo pi\u00f9 incline a essere <b>fortificato<b> e quello maggiormente <b>difendibile</b>. ",
            "cover": "Acropoli5.jpg",
            "audio": "un_it testo 17.m4a"
        },
        "UN_cisterna_1": {
            "title": "La Cisterna",
            "descr": "Caro viaggiatore, ti trovi nella <b>parte alta della citt\u00e0</b>.\n<br>Dinanzi a te trovi la cisterna, una <b>grande vasca collocata alle spalle della Chiesa di S. Pietro</b> e prospiciente il terrazzamento naturale della collina.",
            "cover": "Acropoli6.jpg",
            "audio": "un_it testo 18.m4a"
        },
        "UN_cisterna_2": {
            "title": "Una vasca circolare",
            "descr": "La grande vasca circolare che vedi dinanzi a te \u00e8 uno dei <b>primissimi esempi di <i>opus signinum</i></b>: un modo di costruire le cisterne \u201calla maniera di Segni\u201d, ben descritto da <b>Vitruvio</b> nel <b>De Architectura</b>, un famoso trattato sul modo di costruire dell'epoca romana.\n<br>La grande vasca funzionava da <b>bacino di raccolta dell\u2019acqua piovana</b>, cos\u00ec come gli <i>impluvia</i> delle <i>domus</i> o delle <i>villae</i> romane.",
            "cover": "Acropoli7.jpg",
            "audio": "un_it testo 19.m4a"
        },
        "UN_cisterna_3": {
            "title": "De Architectura",
            "descr": "Il <b>De Architectura</b> \u00e8 un <b>trattato</b> latino scritto da <b>Marco Vitruvio Pollione</b>  intorno al 15 a.C. ",
            "cover": "Acropoli8.jpg",
            "audio": "un_it testo 20.m4a"
        },
        "UN_Tempio_2": {
            "title": "Il tetto del tempio",
            "descr": "L\u2019intero tetto del tempio, era interamente decorato con <b>coloratissime terrecotte architettoniche</b>. \n<br>Nel <b>Museo Archeologico Comunale di Segni</b> sono conservati alcuni esemplari di questi meravigliosi manufatti",
            "cover": "Acropoli9.jpg",
            "audio": "un_it testo 21.m4a"
        },
        "UN_Tempio_3": {
            "title": "Il tempio di Giunone Moneta",
            "descr": "Il tempio - nella conformazione del II secolo a.C. - doveva avere il caratteristico aspetto dell'<b>architettura religiosa etrusco-italica</b>  con <b>podio</b>, <b>scalinata d'accesso</b> e <b>ripartizione dell'edificio in due parti</b>. La parte posteriore era chiusa e divisa in due ambienti e quella anteriore aperta e colonnata. ",
            "cover": "vista 3D",
            "audio": "un_it testo 22.m4a"
        },
        "UN_SanPietro_5": {
            "title": "Frammento di recupero",
            "descr": "Il campanile \u00e8 stato costruito con <b>materiali di recupero</b>. <br>Elementi simili sono stati rinvenuti sia all'interno di questa Chiesa sia nei pressi della Cattedrale e sono oggi custoditi nel <b>Museo Archeologico Comunale di Segni</b> ",
            "cover": "Acropoli10.jpg",
            "audio": "un_it testo 23.m4a"
        },
        "UN_Tempio_5": {
            "title": "Frammento di colonna",
            "descr": "<b>Complimenti! L'hai ritrovata!</b> <br>Questo elemento dalla sezione cilindrica \u00e8 un grosso frammento di <b>una delle colonne del tempio</b>",
            "cover": "Acropoli12.jpg",
            "audio": "un_it testo 25.m4a"
        }
    }
